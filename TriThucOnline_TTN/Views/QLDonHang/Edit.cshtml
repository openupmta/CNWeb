@model TriThucOnline_TTN.Models.DONHANG

@{
    ViewBag.Title = "Chỉnh sửa Đơn hàng";
    Layout = "~/Views/Shared/_LayoutAmin.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-2/css/all.min.css" rel="stylesheet" />
<link rel="stylesheet" href="~/Content/bootstrap.min.css">
<link rel="stylesheet" href="~/Content/Register/css/style.css">

<h2>Chỉnh sửa đơn hàng</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.MaDH)


    @Html.EditorFor(model => model.MaDH, new { htmlAttributes = new { @class = "form-control", @hidden = "" } })

    <div class="form-group">
        <label class="control-label col-md-2">Trạng thái thanh toán</label>
        <div class="col-md-6">
            @Html.EditorFor(model => model.TrangThaiThanhToan, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TrangThaiThanhToan, "", new { @class = "text-danger" })
        </div>
    </div>
    
    <div class="form-group">
        <span class="control-label col-md-3"><strong>Trạng thái giao</strong></span>
        <div class="col-md-6">
            @{if (Model.TrangThaiGiao == 1)
                {
                    <input type="radio" name="TrangThaiGiao" id="TrangThaiGiao" value="1" checked /><span> Đã giao</span><br />
                    <input type="radio" name="TrangThaiGiao" id="TrangThaiGiao" value="0" /><span> Chưa giao</span>
                }
                else
                {
                    <input type="radio" name="TrangThaiGiao" id="TrangThaiGiao" value="1" /><span> Đã giao</span><br />
                    <input type="radio" name="TrangThaiGiao" id="TrangThaiGiao" value="0" checked /><span> Chưa giao</span>
                }
            }
            @*@Html.EditorFor(model => model.Moi)
                @Html.ValidationMessageFor(model => model.Moi)*@
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Lưu" class="btn btn-warning" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Trở về", "Index")
</div>
