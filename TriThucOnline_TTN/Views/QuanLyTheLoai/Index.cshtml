@using PagedList.Mvc;
@using PagedList;
@model PagedList.PagedList<TriThucOnline_TTN.Models.THELOAI>

@{
    ViewBag.Title = "Quản lý thể loại";
    Layout = "~/Views/Shared/_LayoutAmin.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.12.0-2/css/all.min.css" rel="stylesheet" />
<link rel="stylesheet" href="~/Content/bootstrap.min.css">
<link rel="stylesheet" href="~/Content/Register/css/style.css">

<h2>Quản lý thể loại</h2>

<p>
    @*@Html.ActionLink("Create New", "Create")*@
    <a href="@Url.Action("Create")" class="btn btn-success"><i class="glyphicon glyphicon-plus"></i> Thêm thể loại</a>
</p>
<div id="Xoa_CD">
    @{ Html.RenderPartial("IndexPartial");}
</div>
@* Tạo link liên kết các trang*@
    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)/ @Model.PageCount
    <div class="MenuTrang">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
    </div>
    <style>
        .MenuTrang li {
            display: inline;
        }
    </style>
    <script>
        function delete_article(Id) {
            var answer = confirm("Bạn có chắc muốn xóa thể loại này?");
            if (answer) {
                //alert('Xác nhận xóa');
                Remove(Id);
            }
        }

        function Remove(Id) {
            $.ajax({
                type: 'POST',
                url: '/QuanLyTheLoai/Remove',
                data: { id: Id },
                success: function (data) {
                    $.post(data.Url, function (partial) {
                        $("#Xoa_CD").html(partial);
                    });
                }
            });
        }
    </script>
    <script>

        function ChiTietCD(macd) {
            $.ajax({
                type: 'POST',
                url: '/QuanLyTheLoai/XemCTCD',
                data: { macd: macd },
                success: function (data) {
                    $.post(data.Url, function (partial) {
                        $("#All_Dialog").html(partial)
                    });
                }
            });
            //$('#myModal').on('shown.bs.modal', function () {
            //    $(this).find('.modal-dialog').css({
            //        width: '800px',
            //        height: 'auto',
            //        'max-height': '100%'
            //    });
            //});
            $("#myModal").modal();
        }
    </script>
    @* đây là cái bảng dialog *@
    <div id="myModal" class="modal fade" role="dialog">
        <div class="modal-dialog">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Chi tiết thể loại</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>
                <div class="modal-body">
                    @* nội dung bên trong all_dialog *@
                    <div id="All_Dialog"></div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>