@using TriThucOnline_TTN.Models;
@model List<DAUSACH>

<table class="table table-bordered table-hover table-condensed table-striped">
    <thead>
        <tr>
            <th>Mã sách:</th>
            <th>Tên sách:</th>
            <th>Giá bán:</th>
            <th>Mô tả:</th>
            <th>Ngày cập nhật:</th>
            <th>Ảnh bìa:</th>
            <th>Số lượng tồn:</th>
            <th>Chủ đề:</th>
            <th>Nhà xuất bản:</th>
            <th>Mới:</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.MaSach</td>
                <td>@item.TenSach</td>
                <td>@string.Format("{0:0,0}", item.GiaTien) VNĐ</td>
                <td>@Html.Raw(item.TrichDan)</td>
                <td>@item.NamXuatBan</td>
                <td>
                    <img src="@Url.Content("~/Content/HinhAnhSP/"+item.PicBook)" class="img-responsive" style="width: 150px; height: auto"/>
                </td>
                <td>@item.SoLuongTon</td>
                <td>@Html.DisplayFor(modelItem => item.KHOAHOC.TenKhoaHoc)</td>
                <td>@Html.DisplayFor(modelItem => item.NXB.TenNXB)</td>
                <td>@item.Moi</td>
                
            </tr>
        }
    </tbody>
</table>
